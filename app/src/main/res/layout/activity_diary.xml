<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diaryLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seoul.ddroad.diary.DiaryActivity">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </LinearLayout>

   <LinearLayout
       android:id="@+id/main_holder"
       android:orientation="vertical"
       android:padding="@dimen/card_layout_padding"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <LinearLayout
          android:id="@+id/calendar1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
      </LinearLayout>

      <ListView
          android:layout_marginTop="@dimen/card_layout_margin"
          android:dividerHeight="@dimen/card_layout_padding"
          android:divider="@null"
          android:id="@+id/selectedList"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
      </ListView>

      <LinearLayout
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
         <TextView
             android:id="@+id/emptyInfo"
             android:text="@string/guide_message_4"
             android:layout_marginTop="5dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
         </TextView>
      </LinearLayout>
   </LinearLayout>
</RelativeLayout>
