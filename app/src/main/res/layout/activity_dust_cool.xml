<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_y"
    tools:context=".intro.dustActivity_cool">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:id="@+id/relativeLayout">

                <ImageButton
                    android:id="@+id/imageButton20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/up1"
                    android:background="#00000000"
                    android:layout_marginLeft="2.5sp"

                    android:layout_alignParentLeft="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/text_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignBottom="@id/imageButton20"
                    android:layout_alignLeft="@id/imageButton20"
                    android:layout_alignRight="@id/imageButton20"
                    android:layout_alignTop="@id/imageButton20"
                    android:gravity="center"

                    android:paddingLeft="20dp"
                    android:text="서울시"
                    android:textColor="#783712"
                    android:textSize="80px"
                    android:textStyle="bold"
                     />

                <ImageButton
                    android:id="@+id/searchBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:background="#00000000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/up2" />

            </RelativeLayout>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/text_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="30sp"
                android:textColor="#AB4A12"
                android:textSize="80px"
                android:text="34도" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/text_finedust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#476600"
                android:textSize="80px"
                android:text="미세먼지 좋음" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26sp"
                android:background="#00000000"
                app:srcCompat="@drawable/dogface1" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_dog_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#AB4A12"
                android:layout_marginBottom="10sp"
                android:textSize="80px"
                android:text="콩이♡ 456days" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton18"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/underbar" />
        </TableRow>
    </TableLayout>
</LinearLayout>