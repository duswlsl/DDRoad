<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_y"
    android:orientation="vertical"
    tools:context=".intro.dustActivity_cool">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/imageButton20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:src="@drawable/up1" />

        <TextView
            android:id="@+id/text_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@id/imageButton20"
            android:layout_alignLeft="@id/imageButton20"
            android:layout_alignRight="@id/imageButton20"
            android:layout_alignTop="@id/imageButton20"
            android:gravity="center"

            android:paddingLeft="20dp"
            android:text="서울시"
            android:textColor="#783712"
            android:textSize="80px"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_alignRight="@+id/text_location"

            android:src="@drawable/up2" />
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignLeft="@id/imageButton20">
        </android.support.v7.widget.AppCompatSpinner>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="34도"
            android:layout_gravity="center"
            android:textColor="#AB4A12"
            android:textSize="80px" />


        <TextView
            android:id="@+id/text_finedust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미세먼지 좋음"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#476600"
            android:textSize="80px" />

        <ImageButton
            android:id="@+id/mainDogImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26sp"
            android:background="#00000000"
            android:layout_gravity="center"
            android:src="@drawable/dogface1" />

        <TextView
            android:id="@+id/text_dog_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text="콩이♡ 456days"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#AB4A12"
            android:textSize="80px" />


    </LinearLayout>



</LinearLayout>