<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".intro.dustActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/spinner"></android.support.v7.widget.AppCompatSpinner>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:src="@drawable/weather_drop" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:src="@drawable/weather_sun" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:src="@drawable/weather_snowflake" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/text_temperature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="온도 34"
            android:textColor="#3d536a"
            android:textSize="80px" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="℃"
            android:textSize="80px"
            android:textColor="#3d536a"
            android:paddingRight="20dp"
            android:paddingBottom="4dp"
            android:textAlignment="@+id/text_temperature"/>


        <TextView
            android:id="@+id/text_finedust"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:gravity="left"
            android:text="미세먼지"
            android:textColor="#476600"
            android:textSize="80px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/mainDogImg"
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/dogface_2" />

        <TextView
            android:id="@+id/text_dog_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="콩이♡ 456d"
            android:textColor="#3d536a"
            android:textSize="80px" />
    </LinearLayout>
</LinearLayout>